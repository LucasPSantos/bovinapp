<!doctype html>
<html lang="pt-br">
<head>
    <% include ../estrutura/head.ejs %>
</head>
<body>

<!--CONTEUDO-->
<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="divform">
               
            <h1 class="mt-3 mb-4 text-center"><%- pg_titulo %></h1>
            <form action="/alimento/create" method="post" autocomplete="off" required>

                <input type="hidden" value="<%= alimento._id %>" name="alimento[_id]">
                 <div class="form-row">
                <div class="form-group">
                    <label for="nome">Ingrediente:</label>
                    <select class="form-control" id="nome" name="alimento[nome]" maxlength="20" required
                           autofocus value="<%= alimento.nome %>">
                           <option value="">--</option>
                                <option value="Soja">Soja</option>
                                <option value="Milho">Milho</option>
                                <option value="Silagem">Silagem</option>
                                <option value="Novilho">Capim</option> 
                                </select>
                </div>
                <div class="form-group col-md-9">
                        <label for="rebanho">Rebanho:</label>

                        <select class="select-css" name="alimento[rebanho]" id="">
                            <option value="" selected>Selecione um rebanho</option>
                            <% rebanhos.forEach((rebanho) => { %>
                            <option value="<%-rebanho.nome%>"><%=rebanho.nome%></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group col-md-9">
                        <label for="kg">Peso em Kg:</label>
                        <input type="text" class="form-control" id="kg" name="alimento[kg]"  required 
                               value="<%= alimento.kg %>">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-9">
                        <label for="custo">Custo em R$:</label>
                        <input type="text"   class="form-control" id="custo" name="alimento[custo]" required  value="<%= alimento.custo %>" >
                    </div>
                </div>
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
               <button type="submit" class="login100-form-btn"><i class="fas fa-plus"></i> Cadastrar</button>
                    <% if (lenAlimentos > 0 && pg_titulo != 'Editar alimento') {
                    %> <a href="/alimento/list">
                        <button type="button" class="login100-form-btn"><i class="fas fa-list"></i> Ver todos
                        </button>

                    </a>
                    <%
                    } %>
            </div>

            </form>
        </div>
        <div class="nada">
        </div>
    </div>
    </div>
</div>
</body>
</html>

<style type="text/css">
 .form-row{
    background-color: white;
    opacity: 0.8;
 }
 .nada{
    margin: 50px;
 }
</style>
