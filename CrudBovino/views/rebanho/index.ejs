<!doctype html>
<html lang="pt-br">
<head>
    <% include ../estrutura/head.ejs %>
</head>
<body>

<!--CONTEUDO-->
<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="divform">
               
            <h1 class="mt-3 mb-4 text-center"><%- pg_titulo %></h1>
            <form action="/rebanho/create" method="post" autocomplete="off" required>

                <input type="hidden" value="<%= rebanho._id %>" name="rebanho[_id]">
                 <div class="form-row">
                <div class="form-group">
                    <div class="form-group col-md-9">
                        <label for="nome">Nome do lote:</label>
                        <input type="text" class="form-control" id="nome" name="rebanho[nome]"  required 
                               value="<%= rebanho.nome %>">
                    </div>
                           
                </div>
                    <div class="form-group col-md-9">
                        <label for="desc">Descrição(Opcional):</label>
                        <textarea type="text" class="form-control" id="desc" maxlength="50" name="rebanho[desc]"
                               value="<%= rebanho.desc %>"></textarea>
                    </div>
                </div>
                
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
               <button type="submit" class="login100-form-btn"><i class="fas fa-plus"></i> Cadastrar</button>
                    <% if (lenRebanhos > 0 && pg_titulo != 'Editar rebanho') {
                    %> <a href="/rebanho/list">
                        <button type="button" class="login100-form-btn"><i class="fas fa-list"></i> Ver todos
                        </button>

                    </a>
                    <%
                    } %>
            </div>

            </form>
        </div>
        <div class="nada">
        </div>
    </div>
</div>
</div>

<!--CONTEUDO-->


</body>
</html>

<style type="text/css">
    .form-row{
    background-color: white;
    opacity: 0.8;
 }
 .nada{
    margin: 50px;
 }
</style>
